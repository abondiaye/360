{% extends 'base.html.twig' %}

{% block title %}Parcours & Diplômes - GeniusPro360°{% endblock %}

{% block stylesheets %}
{{ parent() }}
<link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" referrerpolicy="no-referrer" />
<style>
body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(115deg, #56d8e4 10%, #9f01ea 90%);
    margin: 0;
    padding: 0;
}
.clip-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    padding: 3rem;
    background-color: #495057;
    border-radius: 16px;
    margin: 2rem;
    box-shadow: 0 0 15px  #495057;
}
.clip-card {
    position: relative;
    overflow: hidden;
    height: 250px;
    border-radius: 1rem;
    box-shadow: 0 10px 20px rgba(0,0,0,0.4);
    cursor: pointer;
    transition: transform 0.4s ease;
}
.clip-card:hover {
    transform: scale(1.05);
}
.clip-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
    filter: brightness(0.9);
}
.clip-card:hover img {
    transform: scale(1.1);
    filter: brightness(0.6) blur(1px);
}
.clip-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(15,23,42,0.85);
    color: #facc15;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    padding: 1rem;
    text-align: center;
    font-weight: bold;
    font-size: 0.9rem;
    backdrop-filter: blur(2px);
}
.clip-card:hover .clip-overlay {
    opacity: 1;
}
.clip-overlay i {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #facc15;
}
</style>
{% endblock %}

{% block body %}
<h1 style="text-align:center; color: #facc15; margin-top: 2rem; font-family: 'Poppins', sans-serif;">Mes diplômes et expériences</h1>
<div class="clip-grid">
