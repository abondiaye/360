{% extends 'base.html.twig' %}

{% block title %}Connexion | GeniusPro360¬∞{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            background: radial-gradient(circle, #0f172a, #1e293b);
            font-family: 'Segoe UI', sans-serif;
            color: #e2e8f0;
            margin: 0;
            padding: 0;
        }

        .login-container {
            max-width: 420px;
            margin: 5rem auto;
            background: rgba(255, 255, 255, 0.05);
            padding: 2.5rem;
            border-radius: 1rem;
            backdrop-filter: blur(12px);
            box-shadow: 0 0 20px rgba(250, 204, 21, 0.3);
            transform: scale(0.95);
            opacity: 0;
        }

        .login-container h1 {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2rem;
            color: #facc15;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #f8fafc;
        }

        .form-group input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #334155;
            border-radius: 0.5rem;
            background-color: #1e293b;
            color: #f1f5f9;
        }

        .form-group input:focus {
            outline: none;
            border-color: #facc15;
            box-shadow: 0 0 8px #facc15;
        }

        .btn-login {
            width: 100%;
            background: linear-gradient(to right, #facc15, #fde68a);
            color: #1e293b;
            font-weight: bold;
            padding: 0.75rem;
            border: none;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .btn-login:hover {
            background: linear-gradient(to right, #fde68a, #facc15);
        }

        .error-message {
            background-color: #dc2626;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 0.5rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .extra-links {
            margin-top: 1rem;
            text-align: center;
            font-size: 0.9rem;
        }

        .extra-links a {
            color: #facc15;
            text-decoration: none;
        }

        .extra-links a:hover {
            text-decoration: underline;
        }

        @media (max-width: 480px) {
            .login-container {
                margin: 2rem 1rem;
                padding: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="login-container" id="login-box">
        <h1>Connexion üîê</h1>

        {% if error %}
            <div class="error-message">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form method="post" action="{{ path('app_login') }}">
            <div class="form-group">
                <label for="email">Adresse email</label>
                <input type="email" id="email" name="email" value="{{ last_username }}" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn-login" type="submit">Se connecter</button>
        </form>

        <div class="extra-links">
            <p>Pas encore inscrit ? <a href="{{ path('app_register') }}">Cr√©er un compte</a></p>
            <p><a href="{{ path('homepage') }}">‚Üê Retour √† l'accueil</a></p>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            gsap.to("#login-box", {
                duration: 1,
                opacity: 1,
                scale: 1,
                ease: "power3.out"
            });
        });
    </script>
{% endblock %}
