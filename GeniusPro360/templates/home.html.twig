<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}GeniusPro360 - Assistance et Diagnostic{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <style>
        /* Styles généraux pour le body et l'image */
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        /* Conteneur pour l'image en arrière-plan */
        #background-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 0; /* Mettre en arrière-plan */
        }

        #background-image img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* S'adapte sans déformation */
        }

        /* Conteneur des boutons */
        .buttonGroup {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            display: flex;
            gap: 15px;
            z-index: 2; /* Les boutons restent au-dessus */
        }

        .buttonGroup button {
            padding: 15px 25px;
            font-size: 18px;
            font-weight: bold;
            border: none;
            border-radius: 5px;
            background-color: #007bff;
            color: white;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .buttonGroup button:hover {
            background-color: #0056b3;
            transform: scale(1.1);
        }

        /* Couche pour Vanta.js */
        #vanta-animation {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 1; /* Les nuages sont devant l'image mais derrière les boutons */
        }
    </style>
</head>
<body>
    <!-- Image en arrière-plan -->
    <div id="background-image">
        <img src="{{ asset('images/Interface.png') }}" alt="GeniusPro360 Logo">
    </div>

    <!-- Animation Vanta -->
    <div id="vanta-animation"></div>

    <!-- Boutons en haut des couches -->
    <div class="buttonGroup">
        <button onclick="window.location.href='{{ path('app_video_call') }}'">Assistance</button>
        <button onclick="window.location.href='{{ path('app_diagnostic') }}'">Diagnostic</button>
        <button onclick="window.location.href='{{ path('blog_index') }}'">Blog</button>
    </div>

    <!-- Script Vanta.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.fog.min.js"></script>
    <script>
        VANTA.FOG({
            el: "#vanta-animation", // Appliquer l'animation sur ce conteneur
            mouseControls: true,
            touchControls: true,
            minHeight: 200.00,
            minWidth: 200.00,
            highlightColor: 0xffcc00,
            midtoneColor: 0xaaaaaa,
            lowlightColor: 0x333333,
            baseColor: 0x000000
        });
    </script>
</body>
</html>
