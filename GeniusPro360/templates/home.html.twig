    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Arial', sans-serif;
            overflow: hidden;
	        background: #0a0a2a;
            background-image: url('{{ asset('images/Interface.png') }}');
            background-size: 50%;
            background-position: center;
            background-repeat: no-repeat;
            position: relative;
        }

        /* Conteneur des étoiles filantes sur toute la page */
        .shooting-stars {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 1;
            overflow: hidden;
        }

        /* Une étoile filante */
        .shooting-stars .star {
            position: absolute;
            top: -5%;
            left: 50%;
            width: 2px;
            height: 80px;
            background: linear-gradient(0deg, rgba(255, 255, 255, 0) 0%, rgba(255, 255, 255, 0.8) 50%, rgba(255, 255, 255, 0) 100%);
            animation: fall 3s linear infinite;
        }

        /* Animation de chute des étoiles */
        @keyframes fall {
            0% {
                transform: translateY(0) translateX(-50%) rotate(45deg);
                opacity: 1;
            }
            100% {
                transform: translateY(120%) translateX(-50%) rotate(45deg);
                opacity: 0;
            }
        }

        /* Animation des étoiles avec différents délais et vitesses */
        .shooting-stars .star:nth-child(odd) {
            animation-duration: 2s;
            animation-delay: 1s;
        }

        .shooting-stars .star:nth-child(even) {
            animation-duration: 3.5s;
            animation-delay: 0s;
        }

        /* Animation des petites étoiles scintillantes */
        .sparkling-stars {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 2;
        }

        .sparkling-stars .sparkle {
            position: absolute;
            width: 5px;
            height: 5px;
            background-color: rgba(255, 255, 255, 0.8);
            border-radius: 50%;
            animation: sparkle 2s infinite ease-in-out;
        }

        @keyframes sparkle {
            0% {
                opacity: 0.5;
                transform: scale(0.8);
            }
            50% {
                opacity: 1;
                transform: scale(1.2);
            }
            100% {
                opacity: 0.5;
                transform: scale(0.8);
            }
        }

        /* Boule centrale */
        .boule-doree {
            background: radial-gradient(circle, gold, transparent);
            box-shadow: 0px 0px 30px 10px rgba(255, 215, 0, 0.6), 0px 0px 50px 20px rgba(255, 223, 0, 0.4);
            margin: auto;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            animation: electric-glow 3s infinite alternate ease-in-out;
        }

        @keyframes electric-glow {
            0% {
                box-shadow: 0px 0px 30px 10px rgba(255, 215, 0, 0.6), 0px 0px 50px 20px rgba(255, 223, 0, 0.4);
            }
            50% {
                box-shadow: 0px 0px 40px 20px rgba(255, 255, 0, 0.8), 0px 0px 60px 30px rgba(255, 255, 0, 0.5);
            }
            100% {
                box-shadow: 0px 0px 50px 25px rgba(255, 250, 100, 1), 0px 0px 70px 40px rgba(255, 250, 100, 0.7);
            }
        }

        /* Conteneur des boutons */
        .buttonGroup {
            position: absolute;
            display: flex;
            justify-content: space-around;
            align-items: center;
            width: 100%;
            height: 100%;
            z-index: 2;
        }

        /* Boutons avec effet */
        .buttonGroup button {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: none;
            background: radial-gradient(circle at 30% 30%, rgba(255, 223, 0, 1) 30%, rgba(255, 223, 0, 0.5) 60%, rgba(0, 0, 0, 0.3) 100%);
            box-shadow: 0 0 25px 10px rgba(255, 215, 0, 0.8), inset 0 0 15px rgba(255, 255, 255, 0.7);
            color: black;
            font-size: 14px;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .buttonGroup button:hover {
            box-shadow: 0 0 35px 15px rgba(255, 223, 0, 1), inset 0 0 20px rgba(255, 255, 255, 0.9);
            transform: scale(1.1);
        }

    </style>
